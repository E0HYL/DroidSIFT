package mySoot;

import soot.*;
import soot.jimple.*;

public class TaintSource {

	private String hostMethod;
	private String apiSignature;
	private int srcParameter;
	private int labelType;
	
	public TaintSource(String hostMethod, String apiSignature, int srcParameter, int labelType){
		this.hostMethod = hostMethod;
		this.apiSignature = apiSignature;
		this.srcParameter = srcParameter;
		this.labelType = labelType;
	}
	
	public String getHostMethod(){
		return this.hostMethod;
	}
	
	public String getApiSignature(){
		return this.apiSignature;
	}
	
	public int getSrcParameter(){
		return this.srcParameter;
	}
	
	public int getLabelType(){
		return this.labelType;
	}
	
	public void setHostMethod(String hostMethod){
		this.hostMethod = hostMethod;
	}
	
	public void setApiSignature(String apiSignature){
		this.apiSignature = apiSignature;
	}
	
	public void setSrcParameter(int srcParameter){
		this.srcParameter = srcParameter;
	}
	
	public void setLabelType(int labelType){
		this.labelType = labelType;
	}
}
